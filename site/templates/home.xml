<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="site-sprite.svg"/>
			<header>
				<div class="logo"></div>

				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					template="parts/header_article.xml"
					/>

				<span>
					<svg>
						<use
							href="#arrow"
							xlink:href="site/images/site-sprite.svg#arrow"
							/>
					</svg>
				</span>	

				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="header_slider"
						template="parts/slider_images.xml"
						/>
				</cms:desktop>

				<cms:mobile>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="mobile_header_slider"
						template="parts/slider_images.xml"
						/>
				</cms:mobile>

			</header>

			<section id="about">
				<h2><cms:text constant="title_about"/></h2>

				<cms:module
					name="articles"
					action="show"
					text_id="about_asset"
					template="parts/article_asset.xml"
					/>

				<div id="form_wrap">
					<p><cms:text constant="title_form"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>

				<cms:module
					name="articles"
					action="show_list"
					group="asset_information"
					template="parts/article_information.xml"
					/>
			</section>
		</body>
	</html>
</document>
