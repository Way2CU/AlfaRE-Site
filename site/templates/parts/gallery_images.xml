<document>
	<a href="$params['image']" cms:eval="href">
		<img 
			src="gallery::getThumbnailById($params['id'], null, 240, Thumbnail::CONSTRAIN_HEIGHT)" 
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		<span><cms:var param="description" multilanguage="yes"/></span>	
	</a>
</document>